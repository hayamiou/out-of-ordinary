<div class="banner-offer mt-3 mx-3">
  <img src="https://www.lejdd.fr/lmnr/var/jdd/public/media/image/2022/07/19/12/escrime-comment-les-francais-apprivoisent-leurs-armes.jpg?VersionId=Mw31AogdDUwVLuCaVdxMozm9kito7TTP" />
  <div class="banner-offer-infos">
      <h1><%= @offer.title.capitalize %> 🎯</h1>
  </div>
</div>

<div class="container d-flex row mx-auto">
  <div class="col-4">
    <div class="cards-offer mt-3">
      <div class="card-offer text-center">
        <div class="card-offer-information">
          <h2> Information : </h2>
          <p> 💳 <%= @offer.price %> € </p>
          <p> 📍 <%= @offer.address %></p>
          <p> 👭👫👬 <%= @offer.places %> people(s) </p>
        </div>
        <div class="card-offer-description mt-5">
          <h2>Description :</h2>
          <p><%= @offer.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-4">
    <%= render 'map' %>
  </div>

  <div class="col-4">
    <div class="card-offer text-center">
        <h2>FORM Booking pour la réservation</h2>
      </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class = "">
      <%= link_to '🔙', offer_path(@offer.prev), class:'ms-3 mt-3 px-5 py-2 form-actions btn btn-ghost' if @offer.prev %>
      <%= link_to 'All', root_path, class:'ms-3 mt-3 px-5 py-2 form-actions btn btn-ghost' %>
      <%= link_to '🔜', offer_path(@offer.next), class:'ms-3 mt-3 px-5 py-2 form-actions btn btn-ghost' if @offer.next %>
    </div>
  </div>
</div>
