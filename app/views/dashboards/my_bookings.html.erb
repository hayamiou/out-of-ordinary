<div class="card-booking">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-booking-infos">
    <h1>Your dashboard :</h1>
  </div>
</div>

<div class="d-flex justify-content-evenly m-3">
  <button class="btn btn-ghost" type="button" data-bs-toggle="collapse" data-bs-target="#status" aria-expanded="false" aria-controls="collapseExample">
    <h2> My booking status</h2>
  </button>

  <button class="btn btn-ghost" type="button" data-bs-toggle="collapse" data-bs-target="#bookings" aria-expanded="false" aria-controls="collapseExample">
    <h2> My booking</h2>
  </button>

  <button class="btn btn-ghost" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    <h2> All my offers</h2>
  </button>
</div>


<div class="collapse m-2" id="status">
  <div class="card card-body">
    <div class="items-card">
      <div class="row">
        <% @offers_bookings.each do |booking| %>
          <%= render partial: "dashboards/booking", locals: { can_accept: true, booking: booking } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="collapse m-2" id="bookings">
  <div class="card card-body">
    <div class="items-card">
      <div class="row">
        <% @bookings.each do |booking| %>
          <%= render partial: "dashboards/booking", locals: { can_accept: false, booking: booking } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="collapse m-2" id="bookings">
  <div class="card card-body">
    <div class="items-card">
      <div class="row">
        <% @bookings.each do |booking| %>
          <%= render 'dashboards/offer', booking: @booking, offer: @offer %>
        <% end %>
      </div>
    </div>
  </div>
</div>
